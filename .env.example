# Ollama Settings (use host.docker.internal:11434 if Ollama is running on host, or ollama:11434 if running in Docker)
OLLAMA_BASE_URL=http://host.docker.internal:11434
LLM_MODEL=llama3.2
EMBEDDING_MODEL=nomic-embed-text

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
QUERY_REWRITE_TEMPERATURE=0.3

# RAG Settings
CONTEXT_WINDOW_SIZE=2
TOP_K_RESULTS=5

# Query Rewriting
QUERY_REWRITE_ENABLED=true
QUERY_CONTEXT_MESSAGES=5

# ChromaDB Settings
CHROMA_HOST=chromadb
CHROMA_PORT=8001
CHROMA_PERSIST_DIR=/data/chroma
CHROMA_COLLECTION=kjv_bible

# SQLite Settings
SQLITE_DB_PATH=/data/conversations.db

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS Settings
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Bible Data
BIBLE_JSON_PATH=/assets/kjv.json
